---
import leafIcon from '../assets/leaf.png';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href={leafIcon.src} />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600&family=Montserrat:wght@300;400;500&family=Great+Vibes&display=swap" rel="stylesheet">
		<title>Alejo & Aby</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--cream: #FFF8E7;
		--warm-beige: #F5E6D3;
		--soft-brown: #8B7355;
		--sage-green: #9CAF88;
		--forest-green: #5F7161;
		--sunflower-yellow: #FFB300;
		--sunflower-center: #6B4423;
		--turquoise: #40B5AD;
		--turquoise-light: #7DD3C0;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		min-height: 100vh;
		font-family: 'Montserrat', sans-serif;
		background: linear-gradient(135deg, var(--cream) 0%, var(--warm-beige) 100%);
		overflow-x: hidden;
	}

	* {
		box-sizing: border-box;
	}
</style>
