---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<div class="not-found-container">
		<div class="not-found-content">
			<h1 class="not-found-title">404</h1>
			<p class="not-found-message">Lo sentimos, esta invitación no existe o el enlace es inválido.</p>
			<p class="not-found-hint">Por favor, verifica que hayas copiado el enlace completo de tu invitación.</p>
		</div>
	</div>
</Layout>

<style>
	.not-found-container {
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 2rem;
		background: linear-gradient(to bottom, #FFF8E7, #FFFFFF);
	}

	.not-found-content {
		text-align: center;
		max-width: 600px;
	}

	.not-found-title {
		font-family: 'Cormorant Garamond', serif;
		font-size: 8rem;
		font-weight: 600;
		color: #6B5A45;
		margin: 0 0 1rem;
		line-height: 1;
	}

	.not-found-message {
		font-family: 'Montserrat', sans-serif;
		font-size: 1.5rem;
		color: #6B5A45;
		margin: 0 0 1rem;
		font-weight: 400;
	}

	.not-found-hint {
		font-family: 'Montserrat', sans-serif;
		font-size: 1.1rem;
		color: #8B7355;
		margin: 0;
		font-weight: 300;
	}

	@media (max-width: 768px) {
		.not-found-title {
			font-size: 6rem;
		}

		.not-found-message {
			font-size: 1.3rem;
		}

		.not-found-hint {
			font-size: 1rem;
		}
	}

	@media (max-width: 480px) {
		.not-found-title {
			font-size: 4rem;
		}

		.not-found-message {
			font-size: 1.1rem;
		}

		.not-found-hint {
			font-size: 0.9rem;
		}
	}
</style>
