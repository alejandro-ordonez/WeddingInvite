---
import leafImage from '../assets/leaf.png';

// Component for falling leaves animation
---

<!-- Leaves behind the card -->
<div class="falling-leaves behind-layer">
	<img src={leafImage.src} alt="" class="leaf leaf-1" />
	<img src={leafImage.src} alt="" class="leaf leaf-2" />
	<img src={leafImage.src} alt="" class="leaf leaf-3" />
	<img src={leafImage.src} alt="" class="leaf leaf-4" />
	<img src={leafImage.src} alt="" class="leaf leaf-5" />
</div>

<!-- Leaves in front of the card -->
<div class="falling-leaves front-layer">
	<img src={leafImage.src} alt="" class="leaf leaf-6" />
	<img src={leafImage.src} alt="" class="leaf leaf-7" />
	<img src={leafImage.src} alt="" class="leaf leaf-8" />
	<img src={leafImage.src} alt="" class="leaf leaf-9" />
	<img src={leafImage.src} alt="" class="leaf leaf-10" />
</div>

<style>
	.falling-leaves {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		pointer-events: none;
		overflow: hidden;
	}

	.falling-leaves.behind-layer {
		z-index: 5;
	}

	.falling-leaves.front-layer {
		z-index: 1000;
	}

	.leaf {
		position: absolute;
		width: 40px;
		height: auto;
		opacity: 0;
		animation: fall linear infinite;
	}

	/* Individual leaf animations with random positions and timings */
	.leaf-1 {
		left: 10%;
		animation-duration: 15s;
		animation-delay: 0s;
	}

	.leaf-2 {
		left: 25%;
		width: 35px;
		animation-duration: 18s;
		animation-delay: 2s;
	}

	.leaf-3 {
		left: 40%;
		width: 45px;
		animation-duration: 16s;
		animation-delay: 4s;
	}

	.leaf-4 {
		left: 60%;
		width: 38px;
		animation-duration: 20s;
		animation-delay: 1s;
	}

	.leaf-5 {
		left: 75%;
		width: 42px;
		animation-duration: 17s;
		animation-delay: 3s;
	}

	.leaf-6 {
		left: 15%;
		width: 36px;
		animation-duration: 19s;
		animation-delay: 5s;
	}

	.leaf-7 {
		left: 30%;
		width: 44px;
		animation-duration: 16s;
		animation-delay: 7s;
	}

	.leaf-8 {
		left: 50%;
		width: 39px;
		animation-duration: 21s;
		animation-delay: 2.5s;
	}

	.leaf-9 {
		left: 70%;
		width: 41px;
		animation-duration: 18s;
		animation-delay: 6s;
	}

	.leaf-10 {
		left: 85%;
		width: 37px;
		animation-duration: 17s;
		animation-delay: 4.5s;
	}

	@keyframes fall {
		0% {
			top: -15%;
			opacity: 0;
			transform: translateX(0) rotate(0deg);
		}
		5% {
			opacity: 0.7;
		}
		10% {
			transform: translateX(20px) rotate(36deg);
		}
		30% {
			transform: translateX(20px) rotate(108deg);
		}
		50% {
			transform: translateX(-20px) rotate(180deg);
		}
		70% {
			transform: translateX(20px) rotate(252deg);
		}
		90% {
			transform: translateX(-10px) rotate(324deg);
		}
		95% {
			opacity: 0.7;
		}
		100% {
			top: 115%;
			opacity: 0;
			transform: translateX(0) rotate(360deg);
		}
	}

	/* Reduce animation on mobile for performance */
	@media (max-width: 768px) {
		.leaf {
			width: 30px;
		}

		.leaf-2,
		.leaf-4,
		.leaf-6,
		.leaf-8,
		.leaf-10 {
			display: none;
		}
	}

	@media (max-width: 480px) {
		.leaf {
			width: 25px;
		}

		.leaf-3,
		.leaf-7 {
			display: none;
		}
	}
</style>
