---
import largeSunflower from '../assets/large-sunflower.svg';
import mediumSunflower from '../assets/medium-sunflower.svg';

interface Props {
	position: 'top-right' | 'bottom-left';
}

const { position } = Astro.props;
---

<div class={`sunflower-decoration ${position}`}>
	{position === 'top-right' ? (
		<img src={largeSunflower.src} alt="Large sunflower decoration" />
	) : (
		<img src={mediumSunflower.src} alt="Medium sunflower decoration" />
	)}
</div>

<style>
	.sunflower-decoration {
		position: absolute;
		pointer-events: none;
		opacity: 0;
	}

	.sunflower-decoration.top-right {
		top: 30px;
		right: 50px;
		width: 180px;
		height: 180px;
		animation: fadeInScale 1.5s ease-out forwards, slowRotate 30s linear infinite;
		animation-delay: 0.6s, 2s;
	}

	.sunflower-decoration.bottom-left {
		bottom: 60px;
		left: 80px;
		width: 140px;
		height: 140px;
		animation: fadeInScale 1.5s ease-out forwards, slowRotate 35s linear infinite;
		animation-delay: 0.9s, 3s;
	}

	@keyframes fadeInScale {
		from {
			opacity: 0;
			transform: scale(0.8);
		}
		to {
			opacity: 1;
			transform: scale(1);
		}
	}

	@keyframes slowRotate {
		from {
			transform: rotate(0deg);
		}
		to {
			transform: rotate(360deg);
		}
	}

	@media (max-width: 768px) {
		.sunflower-decoration.top-right {
			width: 120px;
			height: 120px;
			right: 20px;
		}

		.sunflower-decoration.bottom-left {
			width: 100px;
			height: 100px;
			left: 20px;
		}
	}
</style>
